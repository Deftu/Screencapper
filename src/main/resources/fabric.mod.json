{
    "schemaVersion": 1,
    "id": "${mod_id}",
    "version": "${mod_version}",
    "name": "${mod_name}",
    "description": "A highly advanced screenshot mod.",
    "authors": [
        "Deftu"
    ],
    "contributors": [
        "isXander"
    ],
    "icon": "assets/screencapper/logo.png",
    "contact": {
        "homepage": "https://www.deftu.xyz/",
        "issues": "https://github.com/Deftu/${mod_name}/issues",
        "sources": "https://github.com/Deftu/${mod_name}"
    },
    "license": "GPLv3.0",
    "environment": "client",
    "entrypoints": {
        "client": [
            {
                "adapter": "kotlin",
                "value": "xyz.deftu.screencapper.Screencapper"
            }
        ],
        "modmenu": [
            {
                "adapter": "kotlin",
                "value": "xyz.deftu.screencapper.utils.integrations.ModMenuIntegration"
            }
        ]
    },
    "mixins": [
        "screencapper.mixins.json"
    ],
    "depends": {
        "fabric": "*",
        "fabricloader": ">=0.13.0",
        "fabric-language-kotlin": ">=1.7.2+kotlin.1.6.20",
        "minecraft": "~1.18.2",
        "java": ">=17"
    },
    "suggests": {
        "modmenu": "3.x"
    }
}
